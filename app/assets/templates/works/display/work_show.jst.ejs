<div class="head">
  <h1><%= work.escape("name") %></h1>
  <% if (mod === "1") { %>
    <a class="filter-link" href="/#/works/<%= work.id %>/edit">Edit</a>
  <% } %>
</div>

<div style="clear:both">
</div>

<p class="author"> by <%= work.escape("author") %> </p>

      <div class="stats">
        <div class="stars">
          <div class="raty"></div>
        </div>
        <div class="avg-rating">
          <span class="avg"><%= work.escape("average_rating") %></span>
        </div>
        <div class="num-ratings">
          <div class="num-ratings-number"><%= work.escape("ratings") %></div> ratings
        </div>
        <div class="num-comments">
          <span class="num-comments-number"><%= work.escape("num_comments") %></span> comments
        </div>
        <div class="date">
          <%= work.escape("created_at_string") %>
        </div>
        <div class="length">
          <%= work.escape("length") %> Length
        </div>
      </div>

    <div class="tag-display-box">
      <% work.get("tags").forEach( function (tag) { %>
        <div class="single-tag"><p><%= tag %></p></div>
      <% }) %>
    </div>

    <p class="description"><%= work.escape("description") %></p>
    Read it <a href="<%= work.escape("link") %>">here</a>.
  </div>
</div>
