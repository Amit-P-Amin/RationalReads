<h1><%= work.escape("name") %></h1>
<p class="author"> by <%= work.escape("author") %> </p>

    <div class="stats row">
      <div class="stars col-md-3">
        <div class="raty"></div>
      </div>
      <div class="avg-rating col-md-2">
        <%= work.escape("average_rating") %>
      </div>
      <div class="num-ratings col-md-3">
      <div class="num-ratings-number"><%= work.escape("ratings") %></div> ratings
      </div>
      <div class="num-comments col-md-2">
        <div class="num-comments-number"><%= work.escape("num_comments") %></div> comments
      </div>
    </div>

    <p class="description"><%= work.escape("description") %></p>
    Read it <a href="<%= work.escape("link") %>">here</a>!
  </div>
</div>
