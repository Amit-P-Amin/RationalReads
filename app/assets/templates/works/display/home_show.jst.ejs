<div class="work home-display" id="number-<%= index %>">
  <div class="inner-work">
    <p class="title"><a href="#/works/<%= work.get("id") %>"> <%= work.get("name") %> </a></p>
    <p class="author"> by <%= work.get("author") %> </p>

    <div class="stats">
      <div class="stars">
        <div class="raty"></div>
      </div>
      <div class="avg-rating">
        <%= work.get("average_rating") %>
      </div>
      <div class="num-ratings">
        <div class="num-ratings-number"><%= work.get("ratings") %></div> ratings
      </div>
      <div class="num-comments">
        <%= work.get("num_comments") %> comments
      </div>
      <div class="date">
        <%= work.get("created_at_string") %>
      </div>
      <div class="length">
        <%= work.get("length") %>
      </div>
    </div>

    <p class="description"><%= work.get("description") %></p>
    <p class="link-text">Read it <a class="link-link" href="<%= work.get("link") %>">here</a>!</p>
  </div>
</div>
