<div class="work index-display">
  <div class="inner-work">
    <div class="title-and-author">
      <p class="title"><a href="#/works/<%= work.escape("id") %>"> <%= work.escape("name") %> </a></p>
      <p class="author"> by <%= work.escape("author") %> </p>
    </div>

    <div class="stats">
      <div class="stars">
        <div class="raty"></div>
      </div>
      <div class="avg-rating" title="Bayesian Average Rating">
        <span class="avg"><%= parseFloat(work.escape("bayesian_average")).toFixed(2) %></span>
      </div>
      <div class="num-ratings">
        <% if (work.escape("ratings") == "1")  { %>
          <div class="num-ratings-number"><%= work.escape("ratings") %></div> rating
        <% } else { %>
          <div class="num-ratings-number"><%= work.escape("ratings") %></div> ratings
        <% } %>
      </div>
      <div class="num-comments">
        <% if (work.escape("num_comments") == "1")  { %>
          <a class="blended-link" href="#/works/<%= work.escape("id") %>"><%= work.escape("num_comments") %> comment</a>
        <% } else { %>
          <a class="blended-link" href="#/works/<%= work.escape("id") %>"><%= work.escape("num_comments") %> comments</a>
        <% } %>
      </div>
      <div class="date" title="Date Added to Site">
        <%= work.escape("created_at_string") %>
      </div>
      <div class="length" title="Short works have less than 25k words, medium works less than 100k, and long works less than 500k. Epic works, are well, epic.">
        <%= work.escape("length") %> length
      </div>
    </div>

    <div class="tag-display-box">
      <% work.get("tags").forEach( function (tag) { %>
        <div class="single-tag"><p><%= tag %></p></div>
      <% }) %>
    </div>

    <p class="description"><%= work.escape("description") %></p>

    <p class="link-text">Learn more <a class="link-link" href="#/works/<%= work.escape("id") %>">here</a>.</p>
  </div>
</div>
