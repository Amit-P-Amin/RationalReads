<div class="filter-box">
  <div class="tags filter-box-item">
    <label class="work-form-item">Order By</label>
    <div class="tag-box filter-item" id="orderings">
      <div class="tag-item">
        <input class="tag" type="radio" name="order" value="average_rating">
        <label class="tag-item order-item"> Rating </label>

        <input class="tag" type="radio" name="order" value="created_at">
        <label class="tag-item order-item"> Date Added </label>

        <input class="tag" type="radio" name="order" value="length">
        <label class="tag-item order-item"> Length </label>

        <input class="tag" type="radio" name="order" value="name">
        <label class="tag-item order-item"> Name </label>

        <input class="tag" type="radio" name="order" value="comments">
        <label class="tag-item order-item"> # of Comments </label>
      </div>
    </div>
  </div>

  <div class="tags filter-box-item">
    <label class="work-form-item">View Only</label>
    <div class="tag-box filter-item" id="filters">

    <% var row = 1 %>
    <% var rows = (tags.length / 7) %>
    <% tags.forEach( function (tag) { %>
      <% if (row === 1) { %>
        <div class="tag-column">
          <div class="tag-item">
            <input class="tag" type="checkbox" name="taggings" value="<%= tag.get("name") %>">
            <label class="tag-item"> <%= tag.get("name") %> </label>
          </div>
          <% row++ %>
      <% } else if (row < rows){ %>
          <div class="tag-item">
            <input class="tag" type="checkbox" name="taggings" value="<%= tag.get("name") %>">
            <label class="tag-item"> <%= tag.get("name") %> </label>
          </div>
        <% row++ %>
      <% } else { %>
          <div class="tag-item">
            <input class="tag" type="checkbox" name="taggings" value="<%= tag.get("name") %>">
            <label class="tag-item"> <%= tag.get("name") %> </label>
          </div>
        </div>
        <% row = 1 %>
      <% } %>
    <% }) %>
    </div>
  </div>
</div>
