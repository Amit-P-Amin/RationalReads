<h1>All Works</h3>

<% var count = 0 %>
<% works.each(function (work) { %>
    <% if (count % 2 === 0) { %>
      <div class="row">
    <% } %>

    <div class="work col-md-6">
      <div class="inner-work">
        <p class="title"> <%= work.get("name") %> </p>
        <p class="author"> by <%= work.get("author") %> </p>

        <div class="stats row">
          <div class="stars col-md-3">
            <div id="<%= work.get("id") %>"></div>
          </div>
          <div id="avg-rating<%= work.get("id") %>" class="avg-rating col-md-2">
            <%= work.get("average_rating") %>
          </div>
          <div id="num-ratings<%= work.get("id") %>" class="ratings col-md-3">
          <%= work.get("ratings") %> ratings
          </div>
          <div class="review col-md-2">
          </div>
        </div>

        <p class="description"><%= work.get("description") %></p>
        Read it <a href="<%= work.get("link") %>">here</a>!
      </div>
    </div>


    <% if (count % 2 === 1) { %>
      </div>
    <% } %>

    <% count += 1 %>
<% }); %>
